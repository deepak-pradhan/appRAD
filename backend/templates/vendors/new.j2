<h2 class="title is-4">Add New Tenant</h2>
<form hx-post="{{ url_for('create_tenant') }}" 
      hx-target="#tenant-list" 
      hx-swap="outerHTML"
      hx-on::after-request="this.reset()">
    <div class="field">
        <label class="label">Name</label>
        <div class="control">
            <input class="input" type="text" name="name" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Domain</label>
        <div class="control">
            <input class="input" type="text" name="domain" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Schema Name</label>
        <div class="control">
            <input class="input" type="text" name="schema_name" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Max Users</label>
        <div class="control">
            <input class="input" type="number" name="max_users">
        </div>
    </div>
    <div class="field">
        <label class="label">Subscription Plan</label>
        <div class="control">
            <input class="input" type="text" name="subscription_plan">
        </div>
    </div>
    <div class="field">
        <label class="label">Contact Email</label>
        <div class="control">
            <input class="input" type="email" name="contact_email">
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button type="submit" class="button is-primary">
                <span class="icon"><i class="fas fa-save"></i></span>
                <span>Submit</span>
            </button>
        </div>
    </div>
</form>
