<h2 class="title is-4">Tenant Details</h2>

<a hx-get="/rbac/vendors/9" hx-swap="outerHTML" class="btn btn-primary">Edit</a>

<div class="content has-background-grey-light p-4">
    <p><strong>Name:</strong> {{ tenant.name }}</p>
    <p><strong>Domain:</strong> {{ tenant.domain }}</p>
    <p><strong>Schema Name:</strong> {{ tenant.schema_name }}</p>
    <p><strong>Max Users:</strong> {{ tenant.max_users or "N/A" }}</p>
    <p><strong>Subscription Plan:</strong> {{ tenant.subscription_plan or "N/A" }}</p>
    <p><strong>Contact Email:</strong> {{ tenant.contact_email or "N/A" }}</p>
    <p><strong>Active:</strong> {{ "Yes" if tenant.is_active else "No" }}</p>
</div>
<div class="buttons">
    <button 
        class="button is-info" 
        hx-get="{{ url_for('edit_tenant_form', id=tenant.id) }}"
        hx-target="#tenant-form">
        <span class="icon"><i class="fas fa-edit"></i></span>
        <span>Edit</span>
    </button>
    <button 
        class="button is-info close-details"
        hx-trigger="click"
        hx-get="{{ url_for('list_vendors') }}"
        hx-target="#tenant-details"
        hx-swap="innerHTML"
        aria-label="close">
        <span class="icon"><i class="fas fa-times"></i></span>
        <span>Close-v.1</span>
    </button>
    <button 
        class="button is-info close-details"
        hx-content="''"
        hx-target="#tenant-details"
        hx-swap="outterHTML"
        hx-trigger="click"
        aria-label="close">
        <span class="icon"><i class="fas fa-times"></i></span>
        <span>Close-v.2</span>
    </button>
</div>


<script>
document.addEventListener('click', function(event) {
  if (event.target.closest('.close-details')) {
    document.querySelector('#tenant-details').innerHTML = '';
  }
});
</script> 